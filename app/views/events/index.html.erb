<%= render '/layouts/basic_styles.html.erb' %>
<style type="text/css">
  .pp_details, .none{
    display: none !important; 
  }
  .event{
    display: block;
  }
  .event_img{
    height: 100px;
    width:  100px;
  }
  .text {
    font-size: 13px;
    line-height: 19px;
}
.fancybox-nav{
  width: 10%;
  height: 20%;
}
</style>

<div class="buy_page exhibition">
  <%# render_cell :property, :sidebar, for: @property.property_for, city: @property.city %>

  <div class="buy_item">
      
    <div class="modal">
  <input class="modal-open" id="modal-1" type="checkbox"  hidden>
  <div class="modal-wrap" aria-hidden="false" role="dialog">
    <label class="modal-overlay" for="modal-1"></label>
    <div class="modal-dialog">
      <div class="modal-header">
        <h2>Уведомление </h2>
        <label class="btn-close" for="modal-1" aria-hidden="true">×</label>
      </div>
      <div class="modal-body">
        <p>Ваш запрос отправлен</p>
      </div>
    
        </div>
      </div>
    </div>

    <div class="project_heading">
      <h1 class="h1"><%= @page.title %></h1>
    </div>

    <div class="events_list" id="">
      <ul class="gallery clearfix">
      
      <% @events.each do |event| %>
        <li>
          <img class="avatar" src="<%= event.avatar.list %>">
          <span class="title"><%= event.title %></span>
          <a class="more various" href="#<%= "event#{event.id}" %>" rel="prettyPhoto[inline]">подробнее</a>
        </li>
      <% end %>
      </ul>
    </div>

    <div class="none">
     <% @events.each do |event| %>
      <div class="event_detail" id="<%= "event#{event.id}" %>">
        <h4><%= event.title %></h4>
        <div class="desc"><%= event.description.html_safe %></div>
        <ul class="gallery">
        <% EventAttacment.where(event_id: event.id).each do |attacment| %>
          <li>
            <a rel="example_group" href="<%= attacment.image.attacment_normal %>" ><img alt="" class="event_img" src="<%= attacment.image.attacment_thumb %>" /></a>
          </li>
       <% end %>
        </ul>
      </div>
    <% end %>
    </div>

    <div class="text">
     <%= @page.content.html_safe %>
    </div>
    

<%= render 'layouts/ask_form' %>
  </div>
<%= render 'layouts/sidebar' %>
<div class="clear"></div>

</div>
