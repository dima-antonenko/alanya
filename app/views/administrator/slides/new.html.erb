<style type="text/css">
	.tab-content .form-group{
		padding-bottom: 50px;
	}
	.nav-tabs{
		margin-bottom: 35px;
	}
</style>



<div class="page-content-wrapper">
		<div class="page-content">
			<div class="row">
				<div class="col-md-12">
					<%= form_for([:administrator, @slide], :multipart => true ) do |f| %>
						<div class="portlet light">
							<div class="portlet-title">
								<div class="caption">
									<span class="caption-subject font-blue-madison bold uppercase">
									Новый слайд</span>
								</div>
								<div class="actions btn-set">
									<a href="/administrator/products" class="btn btn-default btn-circle"> Назад </a>
									 <%= f.submit(class: "btn blue-madison btn-circle", value: "Сохранить") %>
									<!-- <button class="btn green-haze btn-circle">Сохранить</button>
									-->
								</div>
							</div>
							<div class="portlet-body">
								<div class="tabbable">
									<ul class="nav nav-tabs">
										<li class="active">
											<a href="#tab_general" data-toggle="tab">
											Основное </a>
										</li>
										
									</ul>
									<div class="tab-content no-space">
										<div class="tab-pane active" id="tab_general">
											<div class="form-body">
												<div class="form-group">
													<label class="col-md-2 control-label">Название: </span>
													</label>
													<div class="col-md-10">
														 <%= f.text_field :title, class: "form-control" %>
													</div>
												</div>
												
												<div class="form-group">
													<label class="col-md-2 control-label">Слайдер: </span>
													</label>
													<div class="col-md-10">
														 <%= f.select :slider_id , Slider.all.collect {|slider| [slider.title, slider.id ]}, class: "form-control" %>
													</div>
												</div>

												<div class="form-group">
													<label class="col-md-2 control-label">Цена: </span>
													</label>
													<div class="col-md-10">
														 <%= f.text_field :price, class: "form-control" %>
													</div>
												</div>

												<div class="form-group">
													<label class="col-md-2 control-label">Ссылка: </span>
													</label>
													<div class="col-md-10">
														 <%= f.text_field :link, class: "form-control" %>
													</div>
												</div>

												<div class="form-group">
													<label class="col-md-2 control-label">Описание: </span>
													</label>
													<div class="col-md-10">
														 <%= f.text_area :description, class: "form-control" %>
													</div>
												</div>

												<div class="form-group">
													<label class="col-md-2 control-label">Текст: </span>
													</label>
													<div class="col-md-10">
														 <%= f.text_area :content, class: "form-control" %>
													</div>
												</div>

												<div class="form-group">
													<label class="col-md-2 control-label">Изображение: </span>
													</label>
													<div class="col-md-10">
														<%= f.file_field :image, class: "btn blue-madison", id: "tab_images_uploader_pickfiles" %>
													</div>
													
												</div>
												<div class="form-group no_padding_bottom">
										<table class="table table-bordered table-hover">
											<thead>
												<tr role="row" class="heading">
													<th width="100%">
														Изображение
													</th>
													
												</tr>
											</thead>
											<tbody>
												<tr>
													<td>
														<a href="#" class="fancybox-button" data-rel="fancybox-button">
															<img class="img-responsive" src="<%= @slide.image.mini_admin %>" alt="">
														</a>
													</td>
												</tr>
											</tbody>
										</table>
									</div>
										
											</div>
										</div>

									</div>
								</div>
							</div>
						</div>
					<% end %>

				</div>
			</div>
			<!-- END PAGE CONTENT-->
		</div>
	</div>

</div>

