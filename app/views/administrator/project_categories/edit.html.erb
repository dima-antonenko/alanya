<style type="text/css">
	.tab-content .form-group{
		padding-bottom: 50px;
	}
	.no_padding_bottom{
		padding-bottom: 0px !important;
	}
	.all_images_string{
		margin: 20px 0;
	}
	.buttons_actions ul li {
		display: inline-block;
		float: right;
		padding-left: 10px;
		padding-top: 10px;
		padding-bottom: 10px;
	}
	td img {
		width: 82px !important;
		height: 61px !important;
		margin: 0px auto;
	}
</style>
<div class="page-content-wrapper">
	<div class="page-content">
		<div class="row">
			<div class="col-md-12">
				<%= form_for([:administrator, @project_category], :multipart => true ) do |f| %>
				<div class="portlet light">
					<div class="portlet-title">
						<div class="caption">
							<i class="icon-basket font-green-sharp"></i>
							<span class="caption-subject font-green-sharp bold uppercase">
							<%= @project_category.title %> </span>
							<span class="caption-helper">редактирование проекта</span>
						</div>
						<div class="actions btn-set">
							<a href="/administrator/projects" class="btn btn-default btn-circle"> Назад </a>
							<%= f.submit(class: "btn blue-hoki btn-circle", value: "Обновить") %>
						</div>
					</div>
					<div class="portlet-body">
						<div class="tabbable">
							<ul class="nav nav-tabs">
								<li class="active">
									<a href="#tab_general" data-toggle="tab">
									Главная</a>
								</li>
								<li>
									<a href="#tab_description" data-toggle="tab">
									Описание </a>
								</li>
								<li>
									<a href="#tab_images" data-toggle="tab">
									Изображения </a>
								</li>
								<li>
									<a href="#tab_managers" data-toggle="tab">
									Менеджеры</a>
								</li>
								<li>
									<a href="#tab_seo" data-toggle="tab">
										SEO
									</a>
								</li>
							</ul>
							<div class="tab-content no-space">
								<div class="tab-pane active" id="tab_general">
									<div class="form-body">

									</div>
								</div>
								<div class="tab-pane" id="tab_description">
									<div class="form-body">
										<div class="form-group">
										</label>
										<div class="col-md-10">
											<%= f.cktext_area :description, class: "form-control edit" %>
										</div>
									</div>
								</div>
							</div>
							<div class="tab-pane" id="tab_images">
								<div class="form-body">
									<div id="tab_images_uploader_container" class="text-align-reverse margin-bottom-10 buttons_actions">
										<ul>
											<li><%= f.file_field :avatar, class: "btn blue-hoki", id: "tab_images_uploader_pickfiles" %></li>
										</ul>
									</div>
									<div class="row">
										<div id="tab_images_uploader_filelist" class="col-md-6 col-sm-12">
										</div>
									</div>
									<div class="form-group no_padding_bottom">
										<table class="table table-bordered table-hover">
											<thead>
												<tr role="row" class="heading">
													<th width="11%">
														Аватар
													</th>
													<th width="88%">
													</th>
												</tr>
											</thead>
											<tbody>
												<tr>
													<td>
														<a href="#" class="fancybox-button" data-rel="fancybox-button">
															<img class="img-responsive" src="<%= @project_category.avatar.mini_admin %>" alt="">
														</a>
													</td>
													<td>
														<a href="javascript:;" class="btn default btn-sm">
														</i> Удалить </a>
													</td>
												</tr>
											</tbody>
										</table>
									</div>
									<div class="form-group">
										<div id="tab_images_uploader_container" class="text-align-reverse margin-bottom-10 buttons_actions">
											<ul>
												<li><%= file_field_tag  "images[]", type: :file, multiple: true, class: "btn blue-hoki", id: "tab_images_uploader_pickfiles" %></li>
											</ul>
											
										</div>
										<span class="caption-subject font-green-sharp bold uppercase all_images_string">
										Все изображения проекта </span>
										<table class="table table-bordered table-hover">
											<thead>
												<tr role="row" class="heading">
													<th width="6%">
														Изображение
													</th>
													<th width="8%">
														Тип
													</th>
													<th width="84%">
													</th>
												</tr>
											</thead>
											<tbody>
												<% # @project_category_attachments.each do |project_attachment| %>
												<tr>
													<td>
														
														<img class="img-responsive" src="" alt="">
													</td>
													<td>
														
													</td>
													<td>
														<%# link_to 'Удалить', project_category_attachment, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn default btn-sm" %>
													</td>
												</tr>
												<% # end %>
											</tbody>
										</table>
									</div>
								</div>
							</div>
							<div class="tab-pane" id="tab_managers">
								<div class="form-body">
									<div id="tab_images_uploader_container" class="text-align-reverse margin-bottom-10 buttons_actions">
										<ul>
											<li></li>
										</ul>
									</div>
									<div class="row">
										<div id="tab_images_uploader_filelist" class="col-md-6 col-sm-12">
										</div>
									</div>
									<div class="form-group no_padding_bottom">
										<table class="table table-bordered table-hover">
											<thead>
												<tr role="row" class="heading">
													<th width="10%">
														Фото
													</th>
													<th width="10%">
														Имя
													</th>
													<th width="10%">
														Должность
													</th>
													<th width="70%">
													</th>
												</tr>
											</thead>
											<tbody>
												<tr>
													<td>
														<a href="#" class="fancybox-button" data-rel="fancybox-button">
															<img class="img-responsive" src="<%= @project_category.avatar.mini_admin %>" alt="">
														</a>
													</td>
													<td>
														Вася
													</td>
													<td>
														Главный
													</td>
													<td>
														<a href="javascript:;" class="btn default btn-sm">
														</i> Удалить </a>
													</td>
												</tr>
											</tbody>
										</table>
									</div>
								</div>
							</div>
							<div class="tab-pane" id="tab_seo">
								<div class="form-group">
								<label class="col-md-2 control-label">Title: </span>
							</label>
							<div class="col-md-10">
								<%# f.text_area :meta_title, class: "form-control" %>
							</div>
						</div>
						<div class="form-group">
						<label class="col-md-2 control-label">Description: </span>
					</label>
					<div class="col-md-10">
						<%# f.text_area :meta_description, class: "form-control" %>
					</div>
				</div>
				<div class="form-group">
				<label class="col-md-2 control-label">Keywords: </span>
			</label>
			<div class="col-md-10">
				<%# f.text_area :meta_keywords, class: "form-control" %>
			</div>
		</div>
	</div>
</div>
</div>
</div>
</div>
</div>
<% end %>
</div>
</div>
<!-- END PAGE CONTENT-->
</div>
</div>
</div>