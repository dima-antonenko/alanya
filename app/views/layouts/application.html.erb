<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml" xmlns="http://www.w3.org/1999/html">
<head>
  <meta http-equiv="content-type" content="text/html; charset=utf-8"/>
  <%= stylesheet_link_tag "application", :media => "screen, projection" %>

  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>

  <script type="text/javascript" src="/src/jquery-latest.min.js"></script>
  <script type="text/javascript" src="/src/jquery-labelauty.js"></script>

  <link rel="stylesheet" href="/src/jquery-labelauty.css" type="text/css" media="screen" charset="utf-8">
  <link rel="stylesheet" href="/src/lby-main.css" type="text/css" media="screen" charset="utf-8">

  <script>
    $(document).ready(function(){
      $(".to-labelauty").labelauty({ checked_label: "value1", unchecked_label: "value2",  });
      $(".to-labelauty").sity({minimum_width: "52px" });
    });
  </script>


</head>

<body>
<!-- BEGIN wrapper-->
<div class="wrapper min_width">

  <!-- BEGIN header-->
  <div class="header clearfix">
    <%= link_to '/', class: 'logo', title: 'Alanya Properties' do %>
        <img src="logo.png">
    <% end %>
    <table class="nav">
      <tr>
         <td class="td"><a href="#">Купить</a></td>
         <td class="td"><a href="#">Купить</a></td>
         <td class="td"><a href="#">Купить</a></td>
         <td class="td"><a href="#">Купить</a></td>
         <td class="td"><a href="#">Купить</a></td>
         <td class="td"><a href="#">Купить</a></td>
        <td class="td last_td">
          <a class="search_item">ПОИСК</a>

          <div class="search_input" style="display:none;">
            <form action="/search" method="GET">
              <input class="input" id="main-search-input" type="text" name="q"/><i class="search_btn"></i>
            </form>
          </div>
        </td>
      </tr>
    </table>
  </div>
  <!-- END header-->

  <!-- BEGIN content-->
  <div class="content <%= @content_class %>">
    <%= yield %>
  </div>
  <!-- END content-->

  <!-- BEGIN footer-->
  <div class="footer">
    <div class="inner clearfix">
      <ul class="fot_nav">
        <li class="li"><a href="#">Купить</a></li>
        <li class="li"><a href="#">Купить</a></li>
        <li class="li"><a href="#">Купить</a></li>
        <li class="li"><a href="#">Купить</a></li>
      </ul>
      <div class="fright">
        <i class="fot_separ"></i>

        <div class="phone">Телефон : 123456</div>
        <i class="fot_separ"></i>
        <a class="icon fot_rss" href="#" title="RSS Feed"></a>
        <i class="fot_separ"></i>
        <a class="icon fot_fb" href="#" title="Facebook Page" target="_blank"></a>
      </div>
    </div>
    <div class="copyright">Копирайт</div>
  </div>
  <!-- END footer-->
</div>
<!-- END wrapper-->


<table class="popup_table hide">
  <tr>
    <td class="pt_td">
      <!-- !!! popup_leaveorder -->
      <!--<script>visible_popup       = 'popup';</script>-->
      <div class="popup clearfix">
        Popup
        <i class="close"></i>
      </div>
      <div class="back none" id="back"></div>

    </td>
  </tr>
</table>

<%= render 'shared/ym' if Rails.env.production? %>
</body>
</html>
